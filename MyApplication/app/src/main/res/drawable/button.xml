<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <solid android:color="@color/top_pink"/>
            <stroke android:color="#45a9da"
                android:width="1px"/>
            <corners android:radius="6dp"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#ba78e7"/>
            <stroke android:color="#ad60e1"
                android:width="1px"/>
            <corners android:radius="6dp"/>
        </shape>
    </item>
</selector>